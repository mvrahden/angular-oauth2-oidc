{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "declarationMap": true,
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "types": ["node"],
    "lib": ["dom", "es2017"]
  },
  "exclude": ["src/test.ts", "**/*.spec.ts"],
  "angularCompilerOptions": {
    "compilationMode": "partial"
  }
}
